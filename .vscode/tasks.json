{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=c++17",
                "-IC:/VulkanSDK",
                "-I%VULKAN_SDK%/Include",
